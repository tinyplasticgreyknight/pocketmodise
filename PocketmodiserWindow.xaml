<Window x:Class="pocketmodise.PocketmodiserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:pocketmodise.Properties"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:pocketmodise"
        d:DataContext="{d:DesignInstance local:Converter}"
        Width="300" Height="120"
        ResizeMode="NoResize"
        Title="pocketmodiser">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="{x:Static p:Resources.OpenButtonCaption}" Command="{Binding OpenInputCommand}"/>
        <Button Grid.Row="1" Content="{x:Static p:Resources.SaveButtonCaption}" Command="{Binding RenderOutputCommand}"/>
    </Grid>
</Window>
